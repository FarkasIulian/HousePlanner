<dx:ThemedWindow x:Class="HousePlanner.Views.AddHouseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:HousePlanner.Views"
        xmlns:mvvm="http://prismlibrary.com/"
        mc:Ignorable="d" 
        Height="450" Width="325"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        mvvm:ViewModelLocator.AutoWireViewModel="True"
        Title="AddHouseView" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock 
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0,0,0,10"
            Text="Add new house!"
            FontSize="44"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
                   />
        <StackPanel VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" Orientation="Vertical">
            <TextBlock
                Text="Email: "
                FontSize="16"
                HorizontalAlignment="Center"
                Margin="5,10,0,0"
                />

            <TextBlock
    Text="Layout Name: "
    FontSize="16"
    HorizontalAlignment="Center"
    Margin="5,17,0,5"
    />
            <TextBlock
Text="Number of floors: "
FontSize="16"
HorizontalAlignment="Center"
Margin="5,16,0,5"
/>
            








        </StackPanel>
        <StackPanel VerticalAlignment="Center" Grid.Row="1" Grid.Column="1">

            <TextBox 
                Margin="5,10,0,0"
                IsReadOnly="True"
    Text="{Binding EmailTextBox}"
    HorizontalAlignment="Center"
    Width="150"
    />
            <TextBox Margin="5,15,0,5"
Text="{Binding LayoutNameTextBox}"
HorizontalAlignment="Center"
Width="150"/>
            <TextBox Margin="5,15,0,5"
Text="{Binding NumberOfFloorsTextBox}"
HorizontalAlignment="Center"
Width="150"/>
            
        </StackPanel>
        <TextBlock
             Grid.Row="2" Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="16"
    Text="Errors: "
    />
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Grid.Column="1">
            <TextBlock
            
            FontSize="16"
            Text="{Binding Errors}"
            Foreground="Red"
            />
        </ScrollViewer>
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" >
            <Button
                Content="Add house!"
                Command="{Binding AddHouseCommand}"
                Margin="20"
                />
            <Button
    Content="Cancel!"
                Click="Button_Click"
    Margin="20"
    />



        </StackPanel>
    </Grid>
</dx:ThemedWindow>
